{
    "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "target": "es6",
      "allowJs": true,
      "checkJs": false,
      "removeComments": true,
      "downlevelIteration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./types/*"]
      }
    },
    "exclude": ["node_modules", "/"],
    "include": ["src/*", "modules.d.ts"]
  }